#!/usr/bin/env deno run --no-check --allow-read --allow-write --allow-run

/*
    Usage:

        ./script/new-note

    Will create the file with a template and open it in VS Code. The filename
    will follow the template: [yyyy-MM-dd-HH-mm-ss].md.
*/

import * as datetime from 'std/datetime/mod.ts';

const DEST = Deno.cwd() + '/src/notes';

const d = new Date();
const offset = Math.abs(d.getTimezoneOffset()) / 60;

const date = datetime.format(d, `yyyy-MM-dd HH:mm:ss '+${offset}'`);
const fileDate = datetime.format(d, 'yyyy-MM-dd-HH-mm-ss');
const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;

const TEMPLATE = `---
date: ${date}
location: <where>
timezone: ${timezone}
draft: true
---\n
`;

const fileName = `${fileDate}.md`;
const fullPath = DEST + '/' + fileName;

await Deno.writeTextFile(fullPath, TEMPLATE, {
    append: true,
});

console.log(`Created ${fullPath}`);

const editor = Deno.run({
    cmd: ['zed', fullPath],
    stdout: 'piped',
    stderr: 'piped',
});

const { code } = await editor.status();
const rawError = await editor.stderrOutput();

if (code != 0) {
    const errorString = new TextDecoder().decode(rawError);
    console.log('Error from process: ', errorString);
}

editor.close();

Deno.exit(code);
