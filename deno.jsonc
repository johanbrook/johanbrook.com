{
    "compilerOptions": {
        "lib": [
            "deno.ns",
            "deno.unstable",
            "dom",
            "dom.iterable"
        ],
        "strict": true
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "singleQuote": true,
            "indentWidth": 4
        }
    }
}
