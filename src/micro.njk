<main role="main" class="notes h-feed">
  <h1 class="visually-hidden p-name">{{ titles.micro }}</h1>
  <ol class="NotesList">
    {% for post in search.pages("type=note", "date=desc") %}
      <li class="h-entry" id="{{ post.url | url(true) }}">
        <article class="Note">
           	<header class="mb2">
                <h1 class="f4 no-rhythm mb0">
                    <a href="{{ post.url }}" title="{{ post.date | date('HUMAN_DATETIME') }} (permalink)" class="font-serif no-underline u-url">
                        <time class="dt-published" datetime="{{ post.date | date('ATOM') }}" pubdate>{{ post.date | date("PPP — HH:mm") }}</time> <span>#</span>
                    </a>
                </h1>
                {% if post.location %}
                    <p title="Posted from" class="muted font-sans mb0 f5 target">{{ post.location }}</p>
                {% endif %}
            </header>

            <div class="prose e-content">
                {{ post.content | md | safe }}
            </div>
        </article>
      </li>
    {% endfor %}
  </ol>

</main>
