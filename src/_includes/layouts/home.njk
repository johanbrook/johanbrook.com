---
layout: layouts/main.njk
home: true
bare: true
---
<main role="main">

  <header class="tc">

    {% include "header-title.svg" %}

  </header>

  <div class="measure mx-auto">
    <section class="mb4 mt4">
      {{ content | safe }}
    </section>

    <section class="mb4">
      <header class="flex items-center mb0">
        <h1 class="f3 fw5 no-rhythm mb0">On my mind</h1>
        
        <a href="/mind" class="btn f7 ml2" title="Read more">/mind ⇢</a>
      </header>

      <ol class="list-reset">
        {% for note in search.pages("type=note", "date=desc", 1) %}
          <li>
            <h2 class="f6 fw4 no-rhythm">
              <a href="{{ note.data.permalink() | url }}" class="muted">Latest: {{ note.data.date | date("PPP — HH:mm")}}</a>
            </h2>
            <div class="prose">
              {{ note.data.content | excerpt | md | safe }}
            </div>

            {% if (note.data.content | excerpt | length) < (note.data.content | trim | length)  %}
                <p class="mt1">
                  <a href="{{ note.data.permalink() | url }}" class="muted f6">continued ⇢</a>
                </p>
            {% endif %}
          </li>
        {% endfor %}
      </ol>
    </section>

    <section>
      <header class="flex items-center mb3">
        <h1 class="f3 fw5 no-rhythm mb0">Writings</h1>
        
        <a href="/writings" class="btn f7 ml2" title="Read more">/writings ⇢</a>
      </header>

      <ol class="list-reset">
        {% for post in search.pages("type=post", "date=desc", 3) %}
          <li class="{% if not loop.last %}mb1{% endif %}">
            <h2 class="f4 no-rhythm fw4 mb0">
              <a href="{{ post.data.url | url }}">{{ post.data.title }}</a>
            </h2>
            <p class="f5 muted mb0">{{ post.data.date | date("HUMAN_DATE") }}</p>
          </li>
        {% endfor %}
      </ol>
    </section>
  </div>
</main>
