---
layout: layouts/main.njk
---
<article role="main" class="Recipe">
    <header class="flex items-center justify-between mb4">
        <h1 class="title">{{ title }}</h1>

        <p class="mb0">
            {% if source %}
                <a class="btn f6" href="{{ source }}">Original source →</a>
            {% endif %}

            <a class="btn f6" href="{{ rawUrl }}">Raw recipe →</a>
        </p>
    </header>

    <div class="prose">
        {{ content | safe }}
    </div>

    <footer class="mt5 flex items-center justify-between">
        <a href=".." class="muted">
      		<span aria-hidden="true" class="BackLink mr1">←</span> All recipes
       	</a>
    </footer>
</article>
