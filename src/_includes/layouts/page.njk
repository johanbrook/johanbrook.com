---
layout: layouts/main.njk
---

<main role="main">
  <article class="Page">
    <header class="mb3">
        <h1 class="title {{ "comp-" + color if color }}">{{ title }}</h1>
    	{% if subtitle %}
    		<p class="subhead mb0">{{ subtitle | md(true) | safe }}</p>
    	{% endif %}
    </header>
    <div class="prose">
      {{ content | safe }}
    </div>

    <footer class="mt4 pt3 border border-t">
        <p class="muted">Updated <time datetime="{{ date | date('ATOM') }}">{{ date | date }}</time>.</p>
    </footer>
  </article>
</main>
