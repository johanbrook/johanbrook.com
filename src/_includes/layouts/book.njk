---
layout: layouts/main.njk
---

<main role="main">
    <article>
        <header class="mb3">
            <h1 class="mb1 font-serif">“{{ title }}”</h1>
            <p class="subhead mb4"><i>By</i> {{ author }}</p>

            <p class="muted f6 border border-t pt2">
                {% if finished %}
                    ☑ ︎I've finished this book{% if finishedAt %} on <time datetime="{{ finishedAt | tdate('Machine')}}">{{ finishedAt | tdate('HumanDate') }}</time>{% endif %}
                {% elif paused %}
                    ☒ I've paused this book
                {% elif dropped %}
                    ☒ I dropped this book
                {% else %}
                    ☒ I'm currently reading this book
                {% endif %}
            </p>
        </header>

        <div class="prose">{{ notes | md | safe }}</div>

        <footer class="mt4">
            <p>
                <a href=".." class="muted"><span aria-hidden="true" class="BackLink mr2">←</span>More books</a>
            </p>
        </footer>
    </article>
</main>
