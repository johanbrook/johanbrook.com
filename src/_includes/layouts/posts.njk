---
layout: layouts/main.njk
---

{% set firstEverPost = search.pages("type=post", "date=asc") | first %}
{% set firstOnPage = results | first %}

<main role="main" class="posts">

  <h1 class="title inset-title">{{ title }}</h1>

  <p class="fw6">
    {{pagination.totalResults }} posts, from {{ firstEverPost.data.date | date("MMMM yyyy") }} to {{ firstOnPage.data.date | date("MMMM yyyy") }}.
  </p>

  <ol class="PostsList">
    {% for post in results %}
      <li class="PostItem">
        <a class="PostItem__Link" href="{{ post.data.url | url }}" title="About {{ post | readingTime }} reading time">{{ post.data.title }} {% if post.data.draft %}<span class="badge">Draft</span>{% endif %}</a>

        <time datetime="{{ post.data.date | date("ATOM") }}" pubdate>{{ post.data.date | date }}</time>
      </li>
    {% endfor %}
  </ol>

  {% include "page-nav.njk" %}

</main>
