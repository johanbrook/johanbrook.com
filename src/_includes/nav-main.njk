<nav role="navigation" class="MainNav">
	<div class="sticky">
		<h1 class="f4 font-sans">
			<a href="/" aria-label="Home">
				<span>{{ titles.site }}</span><span aria-hidden="true" class="BackLink ml2">←</span>
			</a>
		</h1>

		<ul role="list" class="NavList">
           	{%- for entry in search.pages("menu.visible=true", "menu.order") %}
          		<li {% if entry.url | isCurrentPage %} aria-current="page"{% endif %}>
         			<a href="{{ entry.url }}">{{ entry.menu.title or entry.title }}</a>
          		</li>
           	{%- endfor %}
            <li {% if '/all' | isCurrentPage %} aria-current="page"{% endif %}>
     			<a href="/all">All pages</a>
      		</li>
        </ul>
	</div>
</nav>
