<footer role="contentinfo">
  <nav role="navigation" class="HorizNav mb3">
    <ul class="mb3">
      {%- for entry in search.pages("menu.visible=true", "menu.order") %}
        <li {% if entry.data.url == url %} aria-current="page"{% endif %}>
          <a href="{{ entry.data.url }}">{{ entry.data.menu.title or entry.data.title }}</a>
        </li>
      {%- endfor %}
    </ul>

    <ul class="HorizNav__Sub f5">
      <li><a href="/feed.xml" title="Atom">Feed</a></li>
      <li><a href="/meta.json">Meta</a></li>
    </ul>
  </nav>

  <ul class="flex justify-center f6 list-reset">
    <li class="muted">
      <a class="font-mono" href="https://github.com/{{ meta.repo }}/commit/{{ build.hash }}">{{ build.hash | substr(7) }}</a> on <time>{{build.date}}</time>
    </li>
  </ul>
</footer>
