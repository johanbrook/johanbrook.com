---
title: Want to read
layout: layouts/page.njk
description: Books which are on my reading list.
---

<table>
    <thead>
    	<tr>
    		<th scope="column">Title</th>
    		<th scope="column">Author</th>
    		<th scope="column">Notes</th>
    	</tr>
    </thead>
  {% for book in toread | reverse %}
    <tr id="{{ book.slug }}">
    	<th scope="row">
			{{ book.title }}
    	</th>
    	<td>
    		{{ book.author }}
    	</td>
    	<td class="f6">
			{{ book.notes | md(true) | safe }}
    	</td>
    </tr>
  {% endfor %}
</table>
