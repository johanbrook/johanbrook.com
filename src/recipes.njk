{% set recipes = search.pages("type=recipe", "title=asc has_tried=desc") %}

<main class="Page h-feed">
    <header>
        <h1 class="title p-name">{{ title }}</h1>
        <p class="subhead mb0">A mix of my own and other's recipes I'd like to collect.</p>
    </header>

    <ul role="list">
        {% for recipe in recipes %}
        <li class="h-entry" id="{{ recipe.url | url(true) }}">
            {% if recipe.has_tried %}☑{% else %}☒{% endif %}
            <a class="u-url" href="{{ recipe.url | url }}">{{ recipe.title }}</a>
        </li>
        {% endfor %}
    </ul>
</main>
