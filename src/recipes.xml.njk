---
layout: null
url: /recipes.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ titles.recipes }}</title>
  <subtitle>My own and others' recipes.</subtitle>
  <link href="{{ url | url(true) }}" rel="self"/>
  <link href="{{ "/recipes" | url(true) }}"/>
  {% set lastPage = search.pages("type=recipe", "date=asc") | last %}
  <updated>{{ lastPage.date | tdate("Machine", lastPage.timezone) }}</updated>
  <id>{{ "/recipes" | url(true) }}</id>
  <author>
    <name>{{ meta.author }}</name>
    <email>{{ meta.email }}</email>
  </author>
  {% for post in search.pages("type=recipe", "date=desc", 10) %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ post.url | url(true) }}" />
    <updated>{{ post.date | tdate("Machine", post.timezone) }}</updated>
    <id>{{ post.url | url(true) }}</id>
    <content type="text">{{ post.raw | htmlUrl(true) }}</content>
  </entry>
  {% endfor %}
</feed>
