{% set posts = search.pages("type=post", "date=desc") %}
{% set firstEverPost = posts | last %}
{% set latestPost = posts | first %}

<main role="main" class="posts h-feed">

  <h1 class="title pull-W p-name">{{ title }}.</h1>

  <p class="subhead">
    {{posts | length }} posts, from <time datetime="{{ firstEverPost.date | date("DATETIME") }}">{{ firstEverPost.date | date("MMMM yyyy") }}</time> to <time datetime="{{ latestPost.date | date("DATETIME") }}">{{ latestPost.date | date("MMMM yyyy") }}</time>.
  </p>

  <ol class="PostsList">
    {% for post in posts %}
      <li class="PostItem h-entry" id="{{ post.url | url(true) }}">
        <a class="PostItem__Link u-url" href="{{ post.url | url }}" title="About {{ post | readingTime }} reading time">{{ post.title }}</a>

        <div>
            {% if post.draft %}<span class="Badge mr1">Draft</span>{% endif %}
            <time class="font-sans dt-published" datetime="{{ post.date | date('ATOM') }}" pubdate>{{ post.date | date }}</time>
        </div>
      </li>
    {% endfor %}
  </ol>

  {# {% include "page-nav.njk" %} #}

</main>
