{
	"imports": {
    	"lume/": "https://deno.land/x/lume@v1.15.2/",
    	"html_entities": "https://deno.land/x/html_entities@v1.0/mod.js",
    	"yaml": "https://deno.land/std@0.210.0/yaml/mod.ts",
    	"front_matter/": "https://deno.land/std@0.210.0/front_matter/",
    	"datetime": "https://deno.land/std@0.210.0/datetime/mod.ts",
    	"path": "https://deno.land/std@0.211.0/path/mod.ts"
	},
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable-temporal -A -",
		"build": "deno task lume",
		"serve": "deno task build -s --quiet"
	},
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"deno.unstable",
			"dom",
			"dom.iterable"
		],
		"strict": true,
		"types": [
            "lume/types.ts"
        ]
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"singleQuote": true,
			"indentWidth": 4
		}
	}
}
