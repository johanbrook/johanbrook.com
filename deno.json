{
	"importMap": "import_map.json",
	"tasks": {
		"build": "deno task lume",
		"serve": "deno task lume -s",
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -"
	},
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"deno.unstable",
			"dom",
			"dom.iterable"
		],
		"strict": true
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"singleQuote": true,
			"indentWidth": 4
		}
	}
}
